<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileViewActivity"
    android:paddingTop="10dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/profilename"
        android:layout_marginTop="153dp"
        android:textColor="#000000"
        android:textSize="28dp"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Seattle, WA"
        android:id="@+id/profilecity"
        android:textSize="20dp"
        android:layout_below="@+id/profilename"
        android:layout_centerHorizontal="true" />

    <com.facebook.login.widget.ProfilePictureView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/view"
        android:layout_alignParentTop="true"
        android:layout_alignEnd="@+id/profilecity"
        android:layout_marginTop="42dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Logout Screen"
        android:id="@+id/button"
        android:layout_alignBottom="@+id/layout"
        android:layout_centerHorizontal="true" />

    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentStart="false"
        android:layout_toStartOf="@+id/profilename"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="100dp"
        android:layout_marginTop="250dp"
        android:layout_marginRight="10dp"
        android:id="@+id/layout">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Locations Added"
            android:id="@+id/textView2"
            android:singleLine="false"
            android:textAlignment="center"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true" />
    </RelativeLayout>

    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/reviewedbutton"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_alignBottom="@+id/button"
        android:layout_toEndOf="@+id/profilename"
        android:layout_alignTop="@+id/layout">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Locations Reviewed"
            android:id="@+id/textView"
            android:singleLine="false"
            android:textAlignment="center"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true" />
    </RelativeLayout>

    <ImageButton
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:id="@+id/toMapView"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true" />

    <ImageButton
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:id="@+id/toProfileView"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:background="@android:color/darker_gray"/>

    <ImageButton
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:id="@+id/toListView"
        android:layout_alignTop="@+id/toMapView"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>
